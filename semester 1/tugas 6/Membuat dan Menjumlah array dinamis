#include<iostream>
using namespace std;
int main(){
	
int a, b, c, d, e;
int f, g, h, i, j;
int k, l, m, n, o;
string r;	
do{
system("cls");
cout << "=============================================== \n";
cout << "= PROGRAM MEMBUAT DAN MENJUMLAH ARRAY DINAMIS = \n";
cout << "=============================================== \n\n";

cout << "====================================================== \n";
cout << "= ARRAY DINAMIS INI TERDIRI DARI 3 BARIS DAN 5 KOLOM = \n";
cout << "====================================================== \n";

cout<<"Masukan angka pada baris pertama: \n";
cout<<"kolom 1 : ";
cin>>a;
cout<<"kolom 2 : ";
cin>>b;
cout<<"kolom 3 : ";
cin>>c;
cout<<"kolom 4 : ";
cin>>d;
cout<<"kolom 5 : ";
cin>>e;
cout<<endl;

cout<<"Masukan angka pada baris kedua: \n";
cout<<"kolom 1 : ";
cin>>f;
cout<<"kolom 2 : ";
cin>>g;
cout<<"kolom 3 : ";
cin>>h;
cout<<"kolom 4 : ";
cin>>i;
cout<<"kolom 5 : ";
cin>>j;
cout<<endl;

cout<<"Masukan angka pada baris ketiga: \n";
cout<<"kolom 1 : ";
cin>>k;
cout<<"kolom 2 : ";
cin>>l;
cout<<"kolom 3 : ";
cin>>m;
cout<<"kolom 4 : ";
cin>>n;
cout<<"kolom 5 : ";
cin>>o;
cout<<endl;

cout<<"============= \n";
cout<<"= ISI ARRAY = \n";
cout<<"============= \n";

int array [3][5]{
{a, b, c, d, e},
{f, g, h, i, j},
{k, l, m, n, o}
};

for (int p = 0; p < 3; p++){
for (int q = 0; q < 5; q++){
cout<<array[p][q]<<" ";
}
cout<<endl;	
}
int ta = a + b + c + d + e;
int tb = f + g + h + i + j;
int tc = k + l + m + n + o;
int ts = ta + tb + tc;
cout<<"======================== \n";
cout<<"Jumlah baris 1 \t   : "<<ta<<endl;
cout<<"Jumlah baris 2 \t   : "<<tb<<endl;
cout<<"Jumlah baris 3 \t   : "<<tc<<endl;
cout<<"Jumlah semua baris : "<<ts<<endl;
cout<<"======================== \n";
cout <<"Ulangi program? (y/n) : ";
cin>>r;
}while(r=="y");
		
return 0;	
}
